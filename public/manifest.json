{
  "name": "Metadot",
  "description": "Metadot is a browser extension based non-custodial crypto wallet built to support the Polkadot & Kusama Ecosystem.",
  "version": "1.1.11",
  "manifest_version": 2,
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_title": "Metadot",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "web_accessible_resources": ["page.js"],
  "content_security_policy": "script-src 'self' blob: 'unsafe-eval' 'wasm-eval'; object-src 'self'",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
